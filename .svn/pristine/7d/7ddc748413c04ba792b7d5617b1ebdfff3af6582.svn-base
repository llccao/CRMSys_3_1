<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ include file="/commons/common.jsp" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
	<title>制定计划</title>
	<script type="text/javascript">
		$(function(){
			
			$("button[id^='save']").click(function(){
				var id = $(this).attr("id");
				id = id.split("-")[1];
				var todo = $("#todo-" + id).val();
				
				var url = "${ctp}/plan/make-ajax";
				var args = {"id":id, "todo":todo};
				$.post(url, args, function(data){
					$.post(url, args, function(data){
						if(data == "1"){
							alert("修改成功!");
						}else{
							alert("修改失败!");
						}
					});
				});
				
				return false;
			});		
			
			$("button[id^='delete']").click(function(){
				var id = $(this).attr("id");
				id = id.split("-")[1];
				
				var url = "${ctp}/plan/delete-ajax";
				var args = {"id":id};
				$.post(url, args, function(data){
					if(data == "1"){
						$("#plan-" + id).remove();
						alert("删除成功!");
					}else{
						alert("删除失败!");
					}
				});
				
				return false;
			});	
			
			$("#execute").click(function(){
				var id = $(":hidden[name='chance.id']").val();
				window.location.href = "${ctp}/plan/execution?id=" + id;
				return false;
			});
			
		})
	</script>
</head>

<body class="main">
	<span class="page_title">制定计划</span>
	<div class="button_bar">
		<button class="common_button" id="execute">
			执行计划
		</button>
		<button class="common_button" onclick="javascript:history.go(-1);">
			返回
		</button>
	</div>
	
		<form action="${ctp}/plan/make" method="post">
		<table class="query_form_table" border="0" cellPadding="3"
			cellSpacing="0">
			<c:forEach items="${chance }" var="item">
			<tr>
				<th>编号</th>
				<td>${item.id }</td>
				<th>机会来源</th>
				<td>${item.source }</td>
			</tr>
			<tr>
				<th>客户名称</th>
				<td>${item.custName }</td>
				<th>成功机率（%）</th>
				<td>${item.source }</td>
			</tr>
			<tr>
				<th>概要</th>
				<td colspan="3">${item.title }</td>
			</tr>
			<tr>
				<th>联系人</th>
				<td>${item.contact }</td>
				<th>联系人电话</th>
				<td>${item.contactTel }</td>
			</tr>
			<tr>
				<th>机会描述</th>
				<td colspan="3">${item.description }</td>
			</tr>
			<tr>
				<th>创建人</th>
				<td>${item.createBy.name }</td>
				<th>创建时间</th>
				<td>${item.createDate }</td>
			</tr>
			<tr>
				<th>指派给</th>
				<td>${item.designee.name }</td>
			</tr>
			</c:forEach>
		</table>

		<br />
		
		<table class="data_list_table" border="0" cellPadding="3"
			cellSpacing="0">
			<tr>
				<th width="200px">日期</th>
				<th>计划项</th>
			</tr>
			
		</table>
		<br>
		<table class="data_list_table" border="0" cellPadding="3"
			cellSpacing="0">
			<tr>
				<th width="200px">
					日期
				</th>
				<th>
					计划项
				</th>
			</tr>
			<tr id="plan-141">
				<td class="list_data_text">
					2015-12-01
				&nbsp;
				</td>
				<td class="list_data_ltext">
							
				<input type="text" size="50"
						value="spa" id="todo-141"/>
				<button class="common_button" id="save-141">
						保存
				</button>
				<button class="common_button" id="delete-141">
						删除
				</button>
				</td>
			</tr>
		</table>
		
		
		<div class="button_bar">
			<button class="common_button" onclick="document.forms[0].submit();">
				新建
			</button>
		</div>
		<input type="hidden" name="chance.id" value="103" />
		<table class="query_form_table" border="0" cellPadding="3"
			cellSpacing="0">
			
			<tr>
				<th>
					日期
					<br />
					(格式: yyyy-mm-dd)
				</th>
				<td>
					<input type="text" name="date" id="date" />
					&nbsp;
				</td>
				<th>
					计划项
				</th>
				<td>
					<input type="text" name="todo" size="50" id="todo" />
					&nbsp;
				</td>
			</tr>
		</table>
	</form>
</body>
</html>